<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->
	<servlet>
		<servlet-name>ConfigServlet</servlet-name>
		<servlet-class>migool.ot.server.ConfigServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ConfigServlet</servlet-name>
		<url-pattern>/config</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>GrabAndPostServlet</servlet-name>
		<servlet-class>migool.ot.server.GrabAndPostServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GrabAndPostServlet</servlet-name>
		<url-pattern>/autopost</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
